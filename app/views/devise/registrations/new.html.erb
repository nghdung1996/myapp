<div class="login-block">
  <div class="container">
    <div class="row">
      <div class="col-md-4 login-sec">
        <h2 class="text-center">Signup Now</h2>
        <%= form_for resource, as: resource_name,
          url: registration_path(resource_name),
          html:{class: "login-form"} do |f| %>
          <%= render "shared/devisemes", {resource: resource} %>

          <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, autofocus: true,
              class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password",
              class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation,
              autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-login float-right" %>
          </div>
        <% end %>
        <div class="redirect-links">
          <%= render "devise/shared/links" %>
        </div>
        <div class="copy-text">Created with <i class="fa fa-heart"></i> by
          <a href="http://fb.com/huydung1996">MongJi81</a></div>
      </div>
      <div class="col-md-8 banner-sec">
        <%= render "shared/banner_sec" %>
      </div>
    </div>
  </div>
</div>
